<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:nestedScrollingEnabled="false"
    android:scrollbarSize="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <com.fynd.nitrozen.nitrozeninput.NInput
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            app:nb_placeHolder="e.g. John"
            app:nb_title="Name" />

        <com.fynd.nitrozen.nitrozeninput.NInput
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            app:nb_hint="Enter your first name"
            app:nb_placeHolder="e.g. John"
            app:nb_showSuccessText="Success"
            app:nb_title="Name" />

        <com.fynd.nitrozen.nitrozeninput.NInput
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            app:nb_placeHolder="e.g. John"
            app:nb_showSuccessText="Success"
            app:nb_title="Name" />

        <com.fynd.nitrozen.nitrozeninput.NInput
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            app:nb_hint="Enter your first name"
            app:nb_placeHolder="e.g. John"
            app:nb_title="Name" />

        <com.fynd.nitrozen.nitrozeninput.NInput
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            app:nb_hint="Enter your first name"
            app:nb_placeHolder="e.g. John"
            app:nb_showError="true"
            app:nb_title="Name" />

        <com.fynd.nitrozen.nitrozeninput.NInput
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            app:nb_placeHolder="e.g. John"
            app:nb_showLoader="true"
            app:nb_title="Name" />

        <com.fynd.nitrozen.nitrozeninput.NInput
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            app:nb_leadingIcon="@drawable/ic_search"
            app:nb_placeHolder="e.g. John"
            app:nb_title="Name"
            app:nb_trailingIcon="@drawable/ic_close" />

        <com.fynd.nitrozen.nitrozeninput.NInput
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            app:nb_enabled="false"
            app:nb_placeHolder="e.g. John"
            app:nb_title="Name" />

        <com.fynd.nitrozen.nitrozeninput.NInput
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            app:nb_editable="false"
            app:nb_placeHolder="e.g. John"
            app:nb_title="Name" />
    </LinearLayout>
</ScrollView>