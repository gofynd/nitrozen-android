<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/activity_vertical_margin"
    tools:context=".ui.MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/activity_vertical_margin">

        <com.fynd.nitrozen.nitrozencheckbox.NCheckBox
            android:id="@+id/cb_1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/cb_2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:ncb_text="CB1" />

        <com.fynd.nitrozen.nitrozencheckbox.NCheckBox
            android:id="@+id/cb_2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/cb_1"
            app:layout_constraintTop_toTopOf="parent"
            app:ncb_text="CB2" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.fynd.nitrozen.nitrozencheckbox.NCheckBox
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/activity_vertical_margin"
        app:ncb_text="Normal" />

    <com.fynd.nitrozen.nitrozencheckbox.NCheckBox
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/activity_vertical_margin"
        app:ncb_checked="true"
        app:ncb_text="Checked" />


    <com.fynd.nitrozen.nitrozencheckbox.NCheckBox
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/activity_vertical_margin"
        app:ncb_isIndeterminate="true"
        app:ncb_text="Indeterminate Normal" />

    <com.fynd.nitrozen.nitrozencheckbox.NCheckBox
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/activity_vertical_margin"
        app:ncb_checked="true"
        app:ncb_isIndeterminate="true"
        app:ncb_text="Indeterminate Checked" />

    <com.fynd.nitrozen.nitrozencheckbox.NCheckBox
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/activity_vertical_margin"
        app:ncb_checked="true"
        app:ncb_enabled="false"
        app:ncb_text="Disabled Checked" />

    <com.fynd.nitrozen.nitrozencheckbox.NCheckBox
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/activity_vertical_margin"
        app:ncb_checked="false"
        app:ncb_enabled="false"
        app:ncb_text="Disabled Not Checked" />

</LinearLayout>