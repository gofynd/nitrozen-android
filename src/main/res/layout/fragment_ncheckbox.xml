<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/activity_vertical_margin"
    tools:context=".ui.MainActivity">

    <com.fynd.nitrozen.nitrozencheckbox.NCheckBox
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/activity_vertical_margin"
        app:ncb_text="Normal" />

    <com.fynd.nitrozen.nitrozencheckbox.NCheckBox
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/activity_vertical_margin"
        app:ncb_checked="true"
        app:ncb_text="Checked" />


    <com.fynd.nitrozen.nitrozencheckbox.NCheckBox
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/activity_vertical_margin"
        app:ncb_isIndeterminate="true"
        app:ncb_text="Indeterminate Normal" />

    <com.fynd.nitrozen.nitrozencheckbox.NCheckBox
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/activity_vertical_margin"
        app:ncb_checked="true"
        app:ncb_isIndeterminate="true"
        app:ncb_text="Indeterminate Checked" />

    <com.fynd.nitrozen.nitrozencheckbox.NCheckBox
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/activity_vertical_margin"
        app:ncb_checked="true"
        app:ncb_enabled="false"
        app:ncb_text="Disabled Checked" />

    <com.fynd.nitrozen.nitrozencheckbox.NCheckBox
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/activity_vertical_margin"
        app:ncb_checked="false"
        app:ncb_enabled="false"
        app:ncb_text="Disabled Not Checked" />

</LinearLayout>