<?xml version="1.0" encoding="utf-8"?><!--  res/drawable/edittext_rounded_corners.xml -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_focused="true">
        <shape>
            <solid android:color="@color/white" />
            <stroke android:width="1dp" android:color="@color/nitrozen_seconday_color" />
            <corners android:radius="2dp" />
        </shape>
    </item>

    <item android:state_focused="false">
        <shape>
            <solid android:color="@color/white" />
            <stroke android:width="1dp" android:color="@color/ninput_edge_color" />
            <corners android:radius="2dp" />
        </shape>
    </item>
</selector>